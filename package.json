{
  "name": "cartersvillefamilymed",
  "version": "1.0.0",
  "description": "Source for the Cartersville Family Medicine website",
  "main": "index.js",
  "repository": "git@github.com:flintinatux/cartersvillefamilymed.git",
  "author": "flintinatux",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "run-p build:*",
    "build:pages": "NODE_ENV=development pug -O src/data.json -o docs -P src/*.pug",
    "build:styles": "lessc src/index.less | postcss -u autoprefixer | cleancss -O2 --inline all > docs/index.css",
    "clean": "rm -f docs/*.{css,html}",
    "prebuild": "yarn run clean",
    "prewatch": "yarn run clean",
    "watch": "run-p watch:*",
    "watch:pages": "pug -O src/data.json -o docs -Pw src/*.pug",
    "watch:serve": "http-server docs -c-1 -p 3000 -s",
    "watch:styles": "chokidar 'client/styles/*.less' -c 'yarn run build:styles' --silent"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "chokidar-cli": "^1.2.1",
    "clean-css-cli": "^4.2.1",
    "http-server": "^0.11.1",
    "less": "^3.8.1",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.1",
    "pug-cli": "^1.0.0-alpha6"
  }
}
